<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.book.bookrecycler">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/book_recycler_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/book_recycler_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.book.bookrecycler.Contac_Us"
            android:screenOrientation="portrait"/><!--So activity won't rotate -->
        <activity android:name="com.book.bookrecycler.About_Page"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.MyItemsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.FavoriteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.ChatListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.MessageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.UsersProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.MyProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.ItemDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.AddItemActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.LoginAndRegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.book.bookrecycler.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- nesseray for cropImg -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />


        <!-- Notification Service -->
        <service
            android:name="com.book.bookrecycler.notification.FirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>